{% set route = path(app.request.attributes.get('_route'),
    app.request.attributes.get('_route_params')) %}
<div class="Header">
    <div class="container">
        <header class="d-flex justify-content-center py-3">
            <ul class="nav nav-pills">
                <li class="nav-item"><a href="/" class="nav-link {% if route == "/" %}active{% endif %}" aria-current="page">Home</a></li>
                <li class="nav-item"><a href="/show" class="nav-link {% if route == "cars" %}active{% endif %}">All cars</a></li>
                <li class="nav-item"><a href="/add" class="nav-link {% if route == "add" %}active{% endif %}">Add car</a></li>
                <li class="nav-item"><a href="/delete" class="nav-link {% if route == "delete" %}active{% endif %}">Delete car</a></li>
            </ul>
        </header>
    </div>
</div>